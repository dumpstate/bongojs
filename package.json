{
	"name": "@dumpstate/bongojs",
	"version": "0.14.1",
	"description": "PostgreSQL JSON document modeling tool for node.js",
	"main": "lib/index.js",
	"bin": {
		"bongojs": "./lib/cli.js"
	},
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"build:test": "tsc --project test.tsconfig.json",
		"lint": "npm run style:check",
		"prepare": "husky install",
		"prepublish": "npm run build",
		"style:check": "prettier --check .",
		"style:fix": "prettier --write .",
		"test": "npm run build:test && PGUSER=bongo PGHOST=localhost PGDATABASE=bongo_db tap libtest/test/*.test.js libtest/test/**/*.test.js"
	},
	"author": "Albert Sadowski <asadowski@mailbox.org>",
	"license": "MIT",
	"devDependencies": {
		"@types/pg": "^8.6.5",
		"@types/tap": "^15.0.7",
		"husky": "^8.0.1",
		"pg": "^8.8.0",
		"prettier": "2.7.1",
		"tap": "^16.3.0",
		"typescript": "^4.8.4"
	},
	"peerDependencies": {
		"pg": "8.x"
	},
	"dependencies": {
		"ajv": "^8.11.0",
		"commander": "^9.4.1"
	},
	"optionalDependencies": {
		"nanoid": "^4.0.0",
		"pino": "^8.6.1"
	},
	"tap": {
		"check-coverage": false
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/",
		"access": "public"
	}
}
