{
	"name": "@dumpstate/bongojs",
	"version": "0.24.3",
	"description": "PostgreSQL JSON document modeling tool for node.js",
	"main": "lib/index.js",
	"bin": {
		"bongojs": "./lib/cli.js"
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=8"
	},
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"lint": "prettier --check .",
		"prepublish": "npm run build",
		"style:fix": "prettier --write .",
		"test": "PGUSER=bongo PGHOST=localhost PGDATABASE=bongo_db mocha --require ts-node/register test/*.test.ts test/**/*.test.ts"
	},
	"author": "Albert Sadowski <asadowski@mailbox.org>",
	"repository": "dumpstate/bongojs",
	"license": "MIT",
	"devDependencies": {
		"@types/lodash": "^4.14.197",
		"@types/mocha": "^10.0.1",
		"@types/pg": "^8.10.2",
		"lodash": "^4.17.21",
		"mocha": "^10.2.0",
		"pg": "^8.11.3",
		"prettier": "^3.0.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2",
		"ulid": "^2.3.0"
	},
	"peerDependencies": {
		"pg": "8.x"
	},
	"dependencies": {
		"@dumpstate/dbaction": "^0.2.6",
		"ajv": "^8.12.0"
	},
	"optionalDependencies": {
		"pino": "^8.15.0",
		"ulid": "^2.3.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
